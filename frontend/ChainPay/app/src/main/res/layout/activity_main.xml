<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="ChainPay"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:gravity="center"
            android:id="@+id/welcome_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_circle_login"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="登陆"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:gravity="center"
            android:id="@+id/welcome_register"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_circle_register"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="注册"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>



</LinearLayout>